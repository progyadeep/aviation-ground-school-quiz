<Page loaded="pageLoaded">
	<ActionBar>
		<Label text="< Back" tap="goBack"/>
	</ActionBar>
    <ScrollView>
        <StackLayout class="top-down-margin-true" style="width:80%;">
            <Label textWrap="true" class="logo" id="quizCat" text="Random" />
            <Label textWrap="true" class="text1" id="question" text=""/>
			
			<Label class="subtext" id="loadingLabel" text="Fetching questions..."/>
			<ActivityIndicator id="loading" color="brown" busy="true" style="margin-top:50px;"/>
			<Progress value="0" maxValue="4" id="progress"></Progress>
            <Button class="optionButt" text="" id="op1" tap="checkAns"/>
            <Button class="optionButt" text="" id="op2" tap="checkAns"/>
            <Button class="optionButt" text="" id="op3" tap="checkAns"/>
            <Image src="~/next.png" id="next" width="100" height="100" tap="loadQuestion" style="margin-top:80px;"/>
        </StackLayout>
    </ScrollView>
</Page>